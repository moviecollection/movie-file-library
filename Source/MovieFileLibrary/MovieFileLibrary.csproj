<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>MovieFileLibrary</PackageId>
    <TargetFrameworks>netstandard1.0;netstandard2.0;net451</TargetFrameworks>
    <Description>Movie File Library is a simple C# library that helps you to get basic movie/series info from a file.</Description>
    <Authors>Peyman Mohammadi</Authors>
    <Copyright>© 2019 Peyman Mohammadi</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/peymanr34/movie-file-library</PackageProjectUrl>
    <RepositoryUrl>https://github.com/peymanr34/movie-file-library</RepositoryUrl>
    <PackageTags>movie, series, detect, file</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Version>1.1.0-beta.2</Version>
    <PackageReleaseNotes>Improve season detection.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
